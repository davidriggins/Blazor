@if (Movies == null)
{
    <img src="https://media2.giphy.com/media/3oEjI6SIIHBdRxXI40/giphy.gif" />
    @*<text>Loading...</text>*@
}
else if (Movies.Count == 0)
{
    <text>There are no records to show.</text>
}
else
{
    @*<input type="checkbox" @onchange="@(() => displayButtons = !displayButtons)" />*@
    <input type="checkbox" @bind="displayButtons" />


    @foreach (var movie in Movies)
    {
        <IndividualMovie Movie="movie" DisplayButtons="displayButtons" DeleteMovie="DeleteMovie"></IndividualMovie>
    }

}


@code {
    [Parameter]
    public List<Movie> Movies { get; set; }
    bool displayButtons = false;

    private void DeleteMovie(Movie movie)
    {
        Movies.Remove(movie);
    }

}